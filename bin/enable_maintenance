#!/bin/sh
# enable maintenance mode
# Optional argument is an IP-Address to restrict to.

# Find date 2 hours from now. First try GNU date, then try BSD (for the iCrowd)
expiration_date=`date --date='+2 hours' +"%Y.%m.%d %H:%M"`||`date -v+2H +"%Y.%m.%d %H:%M"`

set -e
dir=`dirname $0`/../..
echo "$expiration_date, ${1:-*}, *" > "$dir/AQUARIUS_MAINTENANCE"
